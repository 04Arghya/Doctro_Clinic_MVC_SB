        <h3 class="mt-4 mb-3">Your Assigned Patients:</h3>
        <c:if test="${empty assignedPatients}">
            <div class="alert alert-info" role="alert">
                No patients currently assigned to you.
            </div>
        </c:if>
        <c:if test="${not empty assignedPatients}">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <c:forEach var="patient" items="${assignedPatients}">
                    <tr>
                        <td>${patient.name}</td>
                        <td>${patient.email}</td>
                    </tr>
                </c:forEach>
                </tbody>
            </table>
        </c:if>

        <h3 class="mt-4 mb-3">All Your Appointments:</h3>
        <c:if test="${empty appointments}">
            <div class="alert alert-info" role="alert">
                You have no appointments scheduled.
            </div>
        </c:if>
        <c:if test="${not empty appointments}">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
                </thead>
                <tbody>
                <c:forEach var="appointment" items="${appointments}">
                    <tr>
                        <td>${appointment.user.name}</td>
                        <td>${appointment.date}</td>
                        <td>${appointment.time}</td>
                    </tr>
                </c:forEach>
                </tbody>
            </table>
        </c:if>
